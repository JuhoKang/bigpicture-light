extends layout
block content

	section.content-section-b
		.container-fluid
			.row
				.col-md-12
					//desktop tooltips
					.row
						button.col-lg-1.col-md-1.col-sm-3.col-3.btn-xs.btn-dark#changeMode(onclick="changeModeToNavigatingMode()")
							span.fa.fa-mouse-pointer
							|  (S)
						button.col-lg-1.col-md-1.col-sm-3.col-3.btn-xs.btn-dark#pencilStyle(onclick="changeModeToDrawingMode()")
							span.fa.fa-paint-brush
							|  (D)
						button.col-lg-1.col-md-1.col-sm-3.col-3.btn-xs.btn-dark(onclick="getElementById('drawing-color').click()")
							input.color-input(value="#000000")
						button.col-lg-1.col-md-1.col-sm-3.col-3.btn-xs.btn-dark#remote-control-btn
							.btn-block#drawing-line-width
						button.col-lg-1.col-md-2.col-sm-3.col-6.btn-md.btn-dark#undo-button(style="margin-top:0rem" onclick="unDo()") undo (Ctrl+Z)
						button.col-lg-1.col-md-1.col-sm-3.col-6.btn-md.btn-dark#map-toggle(style="margin-top:0rem") 지도 (M)
						button.col-lg-1.col-md-1.col-sm-3.col-6.btn-md.btn-dark#chatting-btn(value="off" style="margin-top:0rem") 채팅창 (C)
						button.col-lg-1.col-md-2.col-sm-3.col-6.btn-md.btn-dark(style="margin-top:0rem") GitHub
						button.col-lg-1.col-md-2.col-sm-3.col-6.btn-md.btn-dark.my-nick-name(data-toggle='modal', data-target='#init-modal' style="margin-top:0rem") 비회원
						.col-lg-3.col-md-12.col-sm-12.alert.alert-secondary.btn-block#infotext(style='margin-bottom:0rem; margin-top:0rem; padding:0 0 0 5px') 환영합니다!
					.row
						.col-lg-12
							.row#canvas-container-div
								#map-container
									canvas#map
								canvas#c
				#sidebar
					include chatting
	script(type="text/javascript" src="/scripts/nouislider/distribute/nouislider.min.js")
	script(type="text/javascript" src="/vendor/huebee/huebee.pkgd.min.js")
	script(type="text/javascript" src="/scripts/fabric/dist/fabric.js")
	script(type="text/javascript" src="/javascripts/fabric-paint-view.js")
	script(type="text/javascript" src="/javascripts/map-view.js")
	script(type='text/javascript' src="/javascripts/chatting.js")
	script(type='text/javascript' src="/javascripts/shotcuts.js")

	script.
		$('#chatting-btn').click(function(){
				if($(this).val()=="off"){
					$(this).val("on");
					var fullWidth = window.innerWidth;
					var w;
					if(fullWidth/3 > 300){
						w = fullWidth/3;
					}
					else{
						w = 300;
					}
					$('#sidebar').animate({'width':w},700);
				}else{
					$(this).val("off");
					$('#sidebar').animate({'width':0},700);
				}
			});

